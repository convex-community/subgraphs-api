version: "3.7"
services:
  nginx:
    image: tianon/true
    command: "true"
    entrypoint: "true"
  web:
    build:
      context: ./app
      dockerfile: Dockerfile
    restart: always
    command: flask run --host 0.0.0.0 --port 5001
    ports:
     - "5001:5001"
    depends_on:
      - redis
    volumes: ['./app:/app']
    environment:
      FLASK_ENV: 'development'
      FLASK_DEBUG: true